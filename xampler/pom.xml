<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>cz.cuni.mff.d3s.been.xampler</groupId>
	<artifactId>xampler</artifactId>
	<packaging>pom</packaging>
	<version>2.1.0</version>
	<name>xampler</name>

	<modules>
		<module>evaluator</module>
		<module>generator</module>
		<module>generator-svn</module>
		<module>generator-swrep</module>
		<module>task-execute</module> 
		<module>task-deploy</module>
		<module>task-collectresults</module>
		<module>task-build-linux</module>
	</modules>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<been.version>2.1.0</been.version>
		<xampler.version>2.1.0</xampler.version>
		<maven-compiler-plugin.version>2.5.1</maven-compiler-plugin.version>
		<java-source.version>1.7</java-source.version>
		<java-target.version>1.7</java-target.version>
	</properties>

	<dependencies>
		<!-- BEEN DEPENDENCIES -->
		<dependency>
			<groupId>cz.cuni.mff.d3s.been</groupId>
			<artifactId>service_interfaces</artifactId>
			<version>${been.version}</version>
		</dependency>
		<dependency>
			<groupId>cz.cuni.mff.d3s.been</groupId>
			<artifactId>benchmarkmanager</artifactId>
			<version>${been.version}</version>
		</dependency>
		<dependency>
			<groupId>cz.cuni.mff.d3s.been</groupId>
			<artifactId>resultsrepository</artifactId>
			<version>${been.version}</version>
		</dependency>
		<dependency>
			<groupId>cz.cuni.mff.d3s.been.pluggablemodules</groupId>
			<artifactId>pluggablemodule-fileagent</artifactId>
			<version>${been.version}</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>${maven-compiler-plugin.version}</version>
				<configuration>
					<source>${java-source.version}</source>
					<target>${java-target.version}</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>

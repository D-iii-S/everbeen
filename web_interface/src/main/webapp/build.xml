<project name="BEEN" basedir="../">

	<!-- ============== PROPERTIES ============== -->

	<!-- Tomcat's bin directory. -->
	<property name="tomcat.bin.dir" location="${tomcat.dir.final}/bin" />

	<!-- Tomcat's directory for deployed applications. -->
	<property name="tomcat.webapps.dir" location="${tomcat.dir.final}/webapps" />

	<!-- Tomcat's directory where BEEN will be deployed. -->
	<property name="tomcat.been.dir" location="${tomcat.webapps.dir}/been" />

	<!-- Tomcat's directory where BEEN classes will be deployed. -->
	<property name="tomcat.been.classes.dir" location="${tomcat.been.dir}/WEB-INF/classes" />

	<!-- Tomcat's directory where BEEN libraries will be deployed. -->
	<property name="tomcat.been.lib.dir" location="${tomcat.been.dir}/WEB-INF/lib" />
	
	<!-- ============== FILESETS, CLASSPATH, etc ================ -->
	
	<!-- ============== TARGETS ================ -->

	<!-- The "start-tomcat" target starts the Tomcat server. It does this
		 in a platform-dependent way. -->
	<target name="start-tomcat" description="Start the Tomcat server">

		<!-- Windows -->
		<exec executable="net" os="Windows 2003">
			<arg value="start"/>
			<arg value="tomcat6"/>
		</exec>
		<exec executable="net" os="Windows NT"> 
			<arg value="start"/>
			<arg value="tomcat6"/>
		</exec>
		<exec executable="net" os="Windows 2000"> 
			<arg value="start"/>
			<arg value="tomcat6"/>
		</exec>
		<exec executable="net" os="Windows XP"> 
			<arg value="start"/>
			<arg value="tomcat6"/>
		</exec>
		
		<!-- Linux -->
		<exec executable="${tomcat.bin.dir}/startup.sh" os="Linux"/>

	</target>
	
	<!-- The "stop-tomcat" target stops the Tomcat server. It does this
		 in a platform-dependent way. -->
	<target name="stop-tomcat" description="Stop the Tomcat server">

		<!-- Windows -->
		<exec executable="net" os="Windows 2003">
			<arg value="stop"/>
			<arg value="tomcat6"/>
		</exec>
		<exec executable="net" os="Windows NT"> 
			<arg value="stop"/>
			<arg value="tomcat6"/>
		</exec>
		<exec executable="net" os="Windows 2000"> 
			<arg value="stop"/>
			<arg value="tomcat6"/>
		</exec>
		<exec executable="net" os="Windows XP"> 
			<arg value="stop"/>
			<arg value="tomcat6"/>
		</exec>

		<!-- Linux -->
		<exec executable="${tomcat.bin.dir}/shutdown.sh" os="Linux"/>

	</target>

	<!-- Tests if Tomcat directories exist and fails the build if they don't. -->
	<target name="test-tomcat-dir-exists">
		<available file="${tomcat.dir.final}" type="dir" property="tomcat.dir.exists" />
		<available file="${tomcat.been.dir}" type="dir" property="tomcat.dir.exists" />
		<available file="${tomcat.been.lib.dir}" type="dir" property="tomcat.dir.exists" />
		<available file="${tomcat.been.classes.dir}" type="dir" property="tomcat.dir.exists" />
		<fail unless="tomcat.dir.exists" message="Directory ${tomcat.dir.final} doesn't exist. Set correct value of the tomcat.dir property in the build.properties file." />
	</target>
		
	<!-- The "deploy" target deploys the web interface to the Tomcat webapps
	     directory. Should be run under sufficently priviledged user. -->
	<target name="deploy" description="Deploy the web interface"
		depends="test-tomcat-dir-exists">
		
		<unzip src="${dist.dir}/been.war" dest="${tomcat.been.dir}"/>
		
	</target>
	
	<!-- WAR files -->
	
	<target name="war" >
	  <jar jarfile="${dist.dir}/been.war">
		
		<zipfileset dir="${been.dir}/webinterface">	
			<include name="**/*" />
		</zipfileset>
	  	
	  	<zipfileset prefix="WEB-INF/lib" dir="${dist.dir}">	
	  				<include name="been.jar" />
	  	</zipfileset>
	  	
	  	<zipfileset prefix="WEB-INF/lib" dir="${lib.dir}/webinterface">	
	  		<include name="commons-fileupload-1.2.1.jar"/>
	  		<include name="commons-io-1.4.jar"/>
		</zipfileset>

	  	<zipfileset prefix="WEB-INF/lib" dir="${lib.dir}/log4j">	
	  		<include name="log4j-1.2.12.jar"/>
	  	</zipfileset>
	  		
	  	<zipfileset prefix="WEB-INF/lib" dir="${lib.dir}/rmiio">	
	  		<include name="rmiio-2.0.2.jar"/>
	  	</zipfileset>
	  	
	  	<zipfileset prefix="WEB-INF/work" dir="${jaxb.src.dir}">
	  		<include name="td.xsd"/>
	  		<include name="common.xsd"/>
	  		<include name="strbin.xsd"/>
	  	</zipfileset>
	  </jar>	
	</target>


	<!-- The "undeploy" target removes the web interface from the Tomcat
		 webapps directory. Should be run under sufficently priviledged user. -->
	<target name="undeploy" description="Undeploy the web interface"
		depends="test-tomcat-dir-exists">
		<delete dir="${tomcat.been.dir}" />
	</target>
</project>

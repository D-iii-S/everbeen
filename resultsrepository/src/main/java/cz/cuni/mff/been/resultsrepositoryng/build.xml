<project name="BEEN" default="dist" basedir="">
	
	<!-- ================ PROPERTIES ================ -->
	
	<!-- Name of the task -->
	<property name="task.name" value="resultsrepositoryng"/>

	<!-- version of the task. -->	
	<property name="task.version" value="1.0"/>

	<!-- the task's source directory -->
	<property name="rrng.src.dir" value="${src.dir}/cz/cuni/mff/been/resultsrepositoryng" />
	
	<!-- The packages directory of the Results Repository -->
	<property name="task.packages.dir" location="${packages.dir}/resultsrepositoryng" />
	
	<!-- Directory path of the Results Repository's package -->
	<property name="task.package.path" location="cz/cuni/mff/been/resultsrepositoryng" />
	<!-- Name of the JAR file with Results Repository's classes -->
	<property name="task.jar" value="${task.name}.jar" />

	<!-- Package's filename -->
	<property name="task.bpk" value="${task.name}-${task.version}.bpk"/>

	<property name="task.data.root" value="${data.dir}/resultsrepositoryng"/>
	
	<!-- ============== FILESETS, CLASSPATH, etc. ================ -->
	
	<!-- Results Repository's class files -->
	<zipfileset id="task.classes" dir="${build.classes.dir}">
		<!-- this line does not include anything, which is a little bit suspicious -->
		<include name="${task.package.path}/**/*.class" />

		<!-- include used pluggable module interfaces -->
		<include name="cz/cuni/mff/been/pluggablemodule/derby/*.class"/>
		<include name="cz/cuni/mff/been/pluggablemodule/hibernate/*.class"/>
	</zipfileset>
	
	<!-- ================ TARGETS ================ -->
	
	<!-- Checks if we need to regenerate the BEEN package. -->
	<target name="package-uptodate">
		<uptodate property="dont.build.package" targetfile="${dist.tasks.dir}/${task.bpk}">
			<srcfiles refid="task.classes"></srcfiles>
			<srcfiles dir="${task.packages.dir}">
				<include name="config.xml" />
				<include name="metadata.xml" />
			</srcfiles>
		</uptodate>
	</target>

	<!-- Create a BEEN package for the Results Repository -->
	<target name="package" depends="package-uptodate" unless="dont.build.package">
		<!-- create directories -->
		<mkdir dir="${task.data.root}" />
		
		<!-- Create the JAR file with Results Repository's classes -->
		<jar destfile="${task.data.root}/${task.jar}">
			<zipfileset refid="task.classes" />
		</jar>
		
		<!-- Create the BEEN package in the distribution directory -->
		<zip destfile="${dist.tasks.dir}/${task.bpk}" update="false">
			<zipfileset dir="${task.packages.dir}">
				<include name="config.xml" />
				<include name="metadata.xml" />
			</zipfileset>
			<zipfileset prefix="files" dir="${task.data.root}">	
				<include name="${task.jar}" />
			</zipfileset>
		</zip>

		<!-- delete the dist. direcotry -->
		<delete failonerror="false" dir="${task.data.root}"/>

	</target>
	
	<!-- Create directories for the RR and copy example files -->
	<target name="dist" depends="package">
		<!-- EMPTY -->
	</target>
	
	<target name="clean">
	</target>
	
</project>

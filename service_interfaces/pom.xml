<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>cz.cuni.mff.d3s.been</groupId>
	<artifactId>service_interfaces</artifactId>
	<packaging>jar</packaging>
	<version>2.1.0</version>
	<name>service_interfaces</name>

	<parent>
		<groupId>cz.cuni.mff.d3s.been</groupId>
		<artifactId>parent</artifactId>
		<version>0.0.1</version>
		<relativePath>../pom.xml</relativePath>
	</parent>


    <dependencies>
        <dependency>
            <groupId>cz.cuni.mff.d3s.been</groupId>
            <artifactId>core</artifactId>
            <version>2.1.0</version>
        </dependency>
    </dependencies>


	<build>
		<finalName>service_interfaces</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jaxb2-maven-plugin</artifactId>
				<version>1.4</version>
				<executions>
					<execution>
						<id>benchmark-xjc</id>
						<goals>
							<goal>xjc</goal>
						</goals>
						<configuration>
							<staleFile>${project.build.directory}/jaxb2/.benchmarkXjcStaleFlag</staleFile>
							<clearOutputDir>true</clearOutputDir>
							<schemaFiles>benchmark.xsd</schemaFiles>
							<packageName>cz.cuni.mff.been.jaxb.benchmark</packageName>
							<extension>true</extension>
						</configuration>
					</execution>
			                                                                                                                
					<execution>
						<id>config-xjc</id>
						<goals>
							<goal>xjc</goal>
						</goals>
						<configuration>
							<staleFile>${project.build.directory}/jaxb2/.configXjcStaleFlag</staleFile>
							<clearOutputDir>false</clearOutputDir>
							<schemaFiles>config.xsd</schemaFiles>
							<packageName>cz.cuni.mff.been.jaxb.config</packageName>
							<extension>true</extension>
						</configuration>
					</execution>
			                                                                                                                
					<execution>
						<id>dataset-xjc</id>
						<goals>
							<goal>xjc</goal>
						</goals>
						<configuration>
							<staleFile>${project.build.directory}/jaxb2/.datasetXjcStaleFlag</staleFile>
							<clearOutputDir>false</clearOutputDir>
							<schemaFiles>dataset.xsd</schemaFiles>
							<packageName>cz.cuni.mff.been.jaxb.dataset</packageName>
							<extension>true</extension>
						</configuration>
					</execution>
			                                                                                                                
					<execution>
						<id>group-xjc</id>
						<goals>
							<goal>xjc</goal>
						</goals>
						<configuration>
							<staleFile>${project.build.directory}/jaxb2/.groupXjcStaleFlag</staleFile>
							<clearOutputDir>false</clearOutputDir>
							<schemaFiles>group.xsd</schemaFiles>
							<packageName>cz.cuni.mff.been.jaxb.group</packageName>
							<extension>true</extension>
						</configuration>
					</execution>
			                                                                                                                
					<execution>
						<id>pmc-xjc</id>
						<goals>
							<goal>xjc</goal>
						</goals>
						<configuration>
							<staleFile>${project.build.directory}/jaxb2/.pmcXjcStaleFlag</staleFile>
							<clearOutputDir>false</clearOutputDir>
							<schemaFiles>pmc.xsd</schemaFiles>
							<packageName>cz.cuni.mff.been.jaxb.pmc</packageName>
							<extension>true</extension>
						</configuration>
					</execution>
			                                                                                                                
					<execution>
						<id>properties-xjc</id>
						<goals>
							<goal>xjc</goal>
						</goals>
						<configuration>
							<staleFile>${project.build.directory}/jaxb2/.propertiesXjcStaleFlag</staleFile>
							<clearOutputDir>false</clearOutputDir>
							<schemaFiles>properties.xsd</schemaFiles>
							<packageName>cz.cuni.mff.been.jaxb.properties</packageName>
							<extension>true</extension>
						</configuration>
					</execution>
			                                                                                                                
					<execution>
						<id>td-xjc</id>
						<goals>
							<goal>xjc</goal>
						</goals>
						<configuration>
							<staleFile>${project.build.directory}/jaxb2/.tdXjcStaleFlag</staleFile>
							<clearOutputDir>false</clearOutputDir>
							<schemaFiles>td.xsd,condition.xsd,trigger.xsd</schemaFiles>
							<packageName>cz.cuni.mff.been.jaxb.td</packageName>
							<extension>true</extension>
						</configuration>
					</execution>
			                                                                                                                
					<execution>
						<id>tuplit-xjc</id>
						<goals>
							<goal>xjc</goal>
						</goals>
						<configuration>
							<staleFile>${project.build.directory}/jaxb2/.tuplitXjcStaleFlag</staleFile>
							<clearOutputDir>false</clearOutputDir>
							<schemaFiles>tuplit.xsd</schemaFiles>
							<packageName>cz.cuni.mff.been.jaxb.tuplit</packageName>
							<extension>true</extension>
						</configuration>
					</execution>
				</executions>
			                                                                                                                
			                                                                                                                
			</plugin>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>javacc-maven-plugin</artifactId>
				<version>2.6</version>
				<executions>
					<execution>
						<id>javacc</id>
						<goals>
							<goal>javacc</goal>
						</goals>
						<configuration>
							<lookAhead>2</lookAhead>
							<isStatic>false</isStatic>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>

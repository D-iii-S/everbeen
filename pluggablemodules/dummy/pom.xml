<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>pluggablemodule-dummy</artifactId>
	<packaging>jar</packaging>
	<name>pluggablemodule-dummy</name>

	<parent>
		<groupId>cz.cuni.mff.d3s.been.pluggablemodules</groupId>
		<artifactId>pluggablemodules</artifactId>
		<version>2.1.0</version>
	</parent>

	<dependencies>
		<!-- BEEN DEPENDENCIES -->
		<dependency>
			<groupId>cz.cuni.mff.d3s.been</groupId>
			<artifactId>service_interfaces</artifactId>
			<version>${been.version}</version>
		</dependency>
	</dependencies>


	<build>
		<finalName>pluggablemodule-dummy</finalName>

		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.5.1</version>
				<configuration>
					<source>${java-source.version}</source>
					<target>${java-target.version}</target>
				</configuration>
			</plugin>

			<!-- CREATE STANDALONE ONE-JAR -->


			<!-- AND NOW WE WANT TO CREATE BPK PACKAGE -->
			<plugin>
				<groupId>cz.cuni.mff.d3s.been</groupId>
				<artifactId>bpk-plugin</artifactId>
				<version>${project.parent.version}</version>
				<executions>
					<execution>
						<goals>
							<goal>buildpackage</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<humanName>Command Line Interface</humanName>
					<packageJarFile>${project.build.directory}/${project.build.finalName}.jar</packageJarFile>
					<mainClassName>cz.cuni.mff.been.pluggablemodule.dummy.implementation.DummyPluggableModuleImpl</mainClassName>
					<finalName>${project.build.finalName}</finalName>
					<filesToArchive>
					</filesToArchive>

					<type>module</type>
					<module>
						<interfaces>
							<interface>cz.cuni.mff.been.pluggablemodule.dummy.DummyPluggableModule</interface>
						</interfaces>
					</module>
				</configuration>
			</plugin>
		</plugins>
	</build>



</project>

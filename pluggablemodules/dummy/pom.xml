<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>pluggablemodule-dummy</artifactId>
	<packaging>jar</packaging>
	<name>pluggablemodule-dummy</name>

	<parent>
		<groupId>cz.cuni.mff.d3s.been.pluggablemodules</groupId>
		<artifactId>pluggablemodules</artifactId>
		<version>2.1.0</version>
	</parent>

	<dependencies>


	</dependencies>


	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.5.1</version>
				<configuration>
					<source>${java-source.version}</source>
					<target>${java-target.version}</target>
				</configuration>
			</plugin>

			<!-- CREATE STANDALONE ONE-JAR -->


			<!-- AND NOW WE WANT TO CREATE BPK PACKAGE -->
			<plugin>
				<groupId>cz.cuni.mff.d3s.been</groupId>
				<artifactId>bpk-plugin</artifactId>
				<version>${project.parent.version}</version>
				<executions>
					<execution>
						<goals>
							<goal>buildpackage</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<humanName>Dummy Pluggable Module</humanName>
					<packageJarFile>${project.build.directory}/${project.build.finalName}.jar</packageJarFile>
					<mainClassName>cz.cuni.mff.been.pluggablemodule.dummy.implementation.DummyPluggableModuleImpl</mainClassName>
					<name>dummy</name>
					<filesToArchive>
					</filesToArchive>

					<type>module</type>
					<module>
						<interfaces>
							<interface>cz.cuni.mff.been.pluggablemodule.dummy.DummyPluggableModule</interface>
						</interfaces>
					</module>
				</configuration>
			</plugin>

			<!-- NOW COPY THE BPK TO SOFTWARE REPOSITORY BOOTSTRAP FOLDER -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<version>${maven-resources-plugin.version}</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.parent.basedir}/../data/softwarerepository</outputDirectory>
							<resources>
								<resource>
									<directory>${project.basedir}/target/</directory>
									<includes>
										<include>*.bpk</include>
									</includes>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>

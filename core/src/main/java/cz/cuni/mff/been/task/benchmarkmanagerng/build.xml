<project name="BEEN" default="package" basedir=".">
	<!-- ============== PROPERTIES ============== -->

	<property name="generator.task.name" value="generator-runner" />

	<!-- version of the task. -->	
	<property name="generator.task.version" value="1.0"/>

	<!-- Directory of the task in the ${etc.dir} directory -->
	<property name="generator.task.dir" location="${packages.dir}/task/benchmarkmanagerng/generator-runner" />

	<!-- Name of the created task package -->
	<property name="generator.task.bpk" value="${generator.task.name}-${generator.task.version}.bpk" />

	<!-- Directory path of the package of the task -->
	<property name="generator.task.package.path" value="cz/cuni/mff/been/task/benchmarkmanagerng" />

	<!-- Directory of the evaluator packages -->
	<property name="evaluators.task.dir" location="${src.dir}/cz/cuni/mff/been/task/benchmarkmanagerng/evaluator" />

	<!-- ============== FILESETS, CLASSPATH, etc ================ -->
	<!-- build.classes.dir = BEEN/been/build -->
	<fileset id="generator.task.classes" dir="${build.classes.dir}">
		<include name="${generator.task.package.path}/*.class"/>
	</fileset>

	<!-- -->
	<fileset id="generator.metadata" dir="${generator.task.dir}">
		<include name="metadata.xml"/>
		<include name="config.xml"/>
	</fileset>

	<!-- ============== TARGETS ================ -->

	<!-- Runs buildfiles for all the evauators in the evaluator subdirectory -->
	<target name="build-evaluators">
		<ant inheritrefs="true" dir="${evaluators.task.dir}/simpletest" target="package" />
		<ant inheritrefs="true" dir="${evaluators.task.dir}/fileexport" target="package" />
		<ant inheritrefs="true" dir="${evaluators.task.dir}/r" target="package" />
		<ant inheritrefs="true" dir="${evaluators.task.dir}/xampler" target="package" />
	</target>


	<!-- Checks if we need to regenerate the BEEN package -->
	<target name="generator-uptodate">
		<uptodate property="dont.build.generator" targetfile="${dist.tasks.dir}/${generator.task.bpk}">
			<srcfiles refid="generator.task.classes"/>
			<srcfiles refid="generator.metadata"/>
		</uptodate>
	</target>


	<target name="build-generator" depends="generator-uptodate"
			unless="dont.build.generator"> 

		<jar destfile="${generator.task.dir}/${generator.task.name}.jar">
			<fileset refid="generator.task.classes"/>
		</jar>

		<!-- create the zip file with the task package's contents in the dist directory -->
		<zip destfile="${dist.tasks.dir}/${generator.task.bpk}" update="false">
			<zipfileset dir="${generator.task.dir}" prefix="files">
				<include name="${generator.task.name}.jar"/>
			</zipfileset>
			<zipfileset refid="generator.metadata"/>
		</zip>

		<delete file="${generator.task.dir}/${generator.task.name}.jar"/>
	</target>

	<target name="package" depends="build-generator, build-evaluators" />

	<target name="dist" depends="package" />

</project>

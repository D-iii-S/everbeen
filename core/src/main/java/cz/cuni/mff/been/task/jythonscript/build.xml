<project name="BEEN" default="package" basedir=".">
	<!-- ============== PROPERTIES ============== -->
	
	<property name="task.name" value="jython-script"/>
	
	<!-- version of the task. -->	
	<property name="task.version" value="1.0"/>
	
	<!-- Directory of the task in the ${etc.dir} directory -->
	<property name="task.dir" location="${packages.dir}/task/jythonscript"/>
	
	<!-- Directory path of the package  of the task -->
	<property name="task.package.path" value="cz/cuni/mff/been/task/jythonscript"/>
	
	<!-- Name of the jar file with task's classes  -->
	<property name="task.jar" value="${task.name}.jar" />
       	
	<!-- Package's filename -->
	<property name="task.bpk" value="${task.name}-${task.version}.bpk"/>
 
    <!-- Name of the script file which should be included in the package  -->
	<!--<property name="script.name" value="example.py" />-->

	<!-- ============== FILESETS, CLASSPATH, etc ================ -->
	
	<!-- Task's class files -->
	<fileset id="task.classes" dir="${build.classes.dir}">
		<include name="${task.package.path}/*.class" />
	</fileset>

	<!-- ============== TARGETS ================ -->
	
	<!-- Checks if we need to regenerate the BEEN package. -->
	<target name="package-uptodate">
		<uptodate property="dont.build.package" targetfile="${dist.tasks.dir}/${task.bpk}">
			<srcfiles refid="task.classes"></srcfiles>
			<srcfiles dir="${task.dir}">
				<include name="config.xml" />
				<include name="metadata.xml" />
			</srcfiles>
		</uptodate>
	</target>

	<!-- Create a BEEN package for this task -->
	<target name="package" depends="package-uptodate" unless="dont.build.package">
		<!-- create the jar file with task's classes -->
		<jar destfile="${task.dir}/${task.jar}">
			<fileset refid="task.classes" />
		</jar>
		
		<!-- create the zip file with the task package's contents in the dist directory -->
		<zip destfile="${dist.tasks.dir}/${task.bpk}" update="false">
			<zipfileset dir="${task.dir}">
				<include name="config.xml"/>
				<include name="metadata.xml" />
			</zipfileset>

			<zipfileset prefix="files" dir="${task.dir}">	
				<include name="${task.jar}"/>
			</zipfileset>
			<!-- jython's jar is now integrated into been distribution -->
			<!--
			<zipfileset prefix="files" dir="${lib.dir}">
				<include name="${jython.jar}" />
			</zipfileset>
			-->
            <!--<zipfileset prefix="files" dir="${task.dir}">
				<include name="${script.name}" />
			</zipfileset>-->
		</zip>
		
		<!-- delete the jar file with the task's classes (it's already zipped in the task's package -->
		<delete file="${task.dir}/${task.jar}"/>
	</target>
	
</project>

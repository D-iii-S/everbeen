<project name="BEEN-hostmanager" default="dist" basedir=".">
	
	<!-- Name of the task. -->
	<property name="task.name" value="hostmanager"/>

	<!-- version of the task. -->	
	<property name="task.version" value="1.0"/>
	
	<!-- Path to data directory of HM. -->
	<property name="task.data.root" value="${data.dir}/hostmanager"/>
	
	<!-- Path to database directory. -->
	<property name="task.data.db" value="${task.data.root}/hosts"/>
	
	<!-- -->
	<property name="task.package.path" value="cz/cuni/mff/been/hostmanager"/>
	
	<!-- Name of the jar file with HM classes. -->
	<property name="task.jar" value="${task.name}.jar"/>

	<!-- Package's filename -->
	<property name="task.bpk" value="${task.name}-${task.version}.bpk"/>
	
	<!-- HM classes. -->
	<fileset id="task.classes" dir="${build.classes.dir}">
		<include name="${task.package.path}/*.class" />
	</fileset>
	
	<!-- Package directory path. -->
	<property name="task.packages.dir" location="${packages.dir}/hostmanager"/>

	<!-- Checks if we need to regenerate the BEEN package. -->
	<target name="package-uptodate">
		<uptodate property="dont.build.package" targetfile="${dist.tasks.dir}/${task.bpk}">
			<srcfiles refid="task.classes"></srcfiles>
			<srcfiles dir="${task.packages.dir}">
				<include name="config.xml" />
				<include name="metadata.xml" />
				<include name="property.desc"/>
				<include name="alias-definitions"/>
			</srcfiles>
			
			<!-- We need to check the build.properties file, because value of
			     the "use.examples" property in the file affects files included
			     in the package. -->
			<srcfiles file="${been.dir}/build.properties" />
		</uptodate>
	</target>
	
	<!-- Create BEEN package file. -->
	<target name="package" depends="package-uptodate" unless="dont.build.package">
		<!-- Create the JAR file with HM classes -->
		<jar destfile="${task.packages.dir}/${task.jar}">
			<fileset refid="task.classes" />
		</jar>
		
		<!-- Create the BEEN package in the distribution directory -->
		<zip destfile="${dist.tasks.dir}/${task.bpk}" update="false">
			<zipfileset dir="${task.packages.dir}">
				<include name="config.xml" />
				<include name="metadata.xml" />
			</zipfileset>
			<zipfileset prefix="files" dir="${task.packages.dir}">	
				<include name="${task.jar}" />
			</zipfileset>
			<zipfileset prefix="files" dir="${task.packages.dir}">
				<include name="property.desc"/>
				<include name="alias-definitions"/>
				<include name="hostmanager.options"/>
			</zipfileset>
		</zip>
		
		<!-- Delete the JAR file with HM's classes -->
		<delete file="${task.packages.dir}/${task.jar}" />		
	</target>
		
	<!-- Copy essemtial files needed by HM. -->
	<target name="dist" depends="package"> 
	</target>
</project>

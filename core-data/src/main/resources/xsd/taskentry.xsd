<?xml version="1.0" encoding="UTF-8"?>

<xs:schema
		xmlns="http://been.d3s.mff.cuni.cz/taskentry"
		targetNamespace="http://been.d3s.mff.cuni.cz/taskentry"
		elementFormDefault="unqualified"
		attributeFormDefault="unqualified"
		xmlns:taskentry="http://been.d3s.mff.cuni.cz/taskentry"
		xmlns:xs="http://www.w3.org/2001/XMLSchema"
		xmlns:td="http://been.d3s.mff.cuni.cz/taskmanager/td"
		xmlns:jaxb="http://java.sun.com/xml/ns/jaxb"
		xmlns:common="http://been.d3s.mff.cuni.cz/common"
		xmlns:xjc="http://java.sun.com/xml/ns/jaxb/xjc"
		jaxb:extensionBindingPrefixes="xjc"
		jaxb:version="2.0">

	<xs:import schemaLocation="common.xsd" namespace="http://been.d3s.mff.cuni.cz/common"/>
	<xs:import schemaLocation="taskdescriptor.xsd" namespace="http://been.d3s.mff.cuni.cz/taskmanager/td"/>

	<xs:element name="id" type="xs:string"/>
	<xs:element name="taskContextId" type="xs:string" default=""/>
	<xs:element name="ownerId" type="xs:string"/>
	<xs:element name="runtimeId" type="xs:string" />

	<xs:element name="state" type="xs:string">
		<xs:annotation>
			<xs:appinfo>
				<jaxb:property name="state">
					<jaxb:baseType>
						<jaxb:javaType
								name="cz.cuni.mff.d3s.been.core.task.TaskState"
								parseMethod="cz.cuni.mff.d3s.been.core.task.TaskState.valueOf"
								printMethod="String.valueOf"
								/>
					</jaxb:baseType>
				</jaxb:property>
			</xs:appinfo>
		</xs:annotation>

	</xs:element>

	<xs:element name="stateChangeEntry">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="taskentry:state" minOccurs="1" maxOccurs="1">
					<xs:annotation>
						<xs:appinfo>
							<jaxb:property>
								<jaxb:javadoc>State of the task.</jaxb:javadoc>
							</jaxb:property>
						</xs:appinfo>
					</xs:annotation>
				</xs:element>

				<xs:element name="reason" type="xs:string" minOccurs="1" maxOccurs="1">
					<xs:annotation>
						<xs:appinfo>
							<jaxb:javadoc>Describes why an entry's state changed.</jaxb:javadoc>
						</xs:appinfo>
					</xs:annotation>
				</xs:element>
			</xs:sequence>
		</xs:complexType>
	</xs:element>


	<xs:element name="stateChangeLog">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="taskentry:stateChangeEntry" minOccurs="0" maxOccurs="unbounded">
					<xs:annotation>
						<xs:appinfo>
							<jaxb:property name="logEntries">
								<jaxb:javadoc>List of log entries.</jaxb:javadoc>
							</jaxb:property>
						</xs:appinfo>
					</xs:annotation>
				</xs:element>
			</xs:sequence>
		</xs:complexType>
	</xs:element>


	<xs:element name="taskEntry">
		<xs:complexType>
			<xs:all>
				<xs:element ref="taskentry:id" minOccurs="1" maxOccurs="1">
					<xs:annotation>
						<xs:appinfo>
							<jaxb:property>
								<jaxb:javadoc>Cluster-unique ID of the task.</jaxb:javadoc>
							</jaxb:property>
						</xs:appinfo>
					</xs:annotation>
				</xs:element>

				<xs:element ref="taskentry:ownerId" minOccurs="0" maxOccurs="1">
					<xs:annotation>
						<xs:appinfo>
							<jaxb:property>
								<jaxb:javadoc>Current task manager taking care of the entry.</jaxb:javadoc>
							</jaxb:property>
						</xs:appinfo>
					</xs:annotation>
				</xs:element>

				<xs:element ref="taskentry:runtimeId" minOccurs="0" maxOccurs="1">
					<xs:annotation>
						<xs:appinfo>
							<jaxb:property>
								<jaxb:javadoc>ID of a Host Runtime on which the task has been scheduled</jaxb:javadoc>
							</jaxb:property>
						</xs:appinfo>
					</xs:annotation>
				</xs:element>

				<xs:element ref="taskentry:taskContextId" minOccurs="1" maxOccurs="1">
					<xs:annotation>
						<xs:appinfo>
							<jaxb:property>
								<jaxb:javadoc>ID of a task context in which this task is running.</jaxb:javadoc>
							</jaxb:property>
						</xs:appinfo>
					</xs:annotation>
				</xs:element>

				<xs:element ref="taskentry:state" minOccurs="1" maxOccurs="1">
					<xs:annotation>
						<xs:appinfo>
							<jaxb:property>
								<jaxb:javadoc>Current state of the task.</jaxb:javadoc>
							</jaxb:property>
						</xs:appinfo>
					</xs:annotation>
				</xs:element>

				<xs:element name="exitCode" type="common:nonnegativeInt" default="0" minOccurs="0" maxOccurs="1">
					<xs:annotation>
						<xs:appinfo>
							<jaxb:property>
								<jaxb:javadoc>Exit code of the task. The value has meaning only if task ends up in TaskState.FINISHED</jaxb:javadoc>
							</jaxb:property>
						</xs:appinfo>
					</xs:annotation>
				</xs:element>

				<xs:element ref="td:taskDescriptor" minOccurs="1" maxOccurs="1">
					<xs:annotation>
						<xs:appinfo>
							<jaxb:property>
								<jaxb:javadoc>Task descriptor for a task.</jaxb:javadoc>
							</jaxb:property>
						</xs:appinfo>
					</xs:annotation>
				</xs:element>

				<xs:element ref="taskentry:stateChangeLog"  minOccurs="0" maxOccurs="1">
					<xs:annotation>
						<xs:appinfo>
							<jaxb:property>
								<jaxb:javadoc>Logs changes to the TaskEntry</jaxb:javadoc>
							</jaxb:property>
						</xs:appinfo>
					</xs:annotation>
				</xs:element>

			</xs:all>
		</xs:complexType>
	</xs:element>

</xs:schema>

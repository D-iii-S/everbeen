<project default="copy-resources">
  <target name="init"/>
  <target name="copy-resources" depends="init">
    <copy todir="target/classes/xsd" filtering="false">
      <fileset dir="src/main/resources/xsd" includes="*.xsd" excludes="**/*.java"/>
    </copy>
    <copy todir="target/classes/META-INF/services" filtering="false">
      <fileset dir="META-INF/services" includes="*" excludes="**/*.java"/>
    </copy>
  </target>
</project>
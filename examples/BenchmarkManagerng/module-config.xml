<?xml version="1.0" encoding="UTF-8"?>
<config
	xmlns="http://been.mff.cuni.cz/benchmarkmanagerng/config"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
>
	<!-- As a first thing we define complex types used in the rest of the configuration -->

	<!-- Select type -->
	<type id="simpleSelect">
		<value name="value1" />
		<value name="value2" />
	</type>

	<!-- Select type -->
	<type id="multiSelect" multiple="true">
		<value name="value1" />
		<value name="value2" />
	</type>

    <!-- This type will be displayed as radibuttons with additional items under each option -->
	<type id="buttonedGroups1">
		<value name="option1" desc="Caption of this button">
			<group id="option1group" desc="Configuration for this option">
				<item id="suboption1" type="text" desc="caption" />
			</group>
		</value>
		<!-- The next item doesn't have any sub-options -->
		<value name="option2" desc="Caption 2" />
	</type>

	<!-- Types are declared so we start with the configuration itself-->
	<group id="FirstGroup" desc="Simple Types">
		<item id="key1" type="text" desc="Text field caption" constraint="integer" default="some default value" />
		<item id="key2" type="textarea" desc="caption" constraint="javaIdentifier" default="some default value" />
		<item id="key3" type="rsl" desc="caption" constraint="notEmpty" default="name=/.*/" />
		<item id="key4" type="checkbox" desc="caption" default="true" />
		<!-- contraints are classes from common.inputvalidator Curent values:
		notEmpty, integer, integerInterval, javaIdentifier -->
	</group>

	<group id="SecondGroup" desc="User Types">
	    <!-- Simple types -->
		<item id="key5" type="simpleSelect" desc="caption" default="option1" />
		<item id="key6" type="multiSelect" desc="caption" />
		<item id="key7" type="buttonedGroups1" desc="caption" default="option2" />
	</group>

</config>

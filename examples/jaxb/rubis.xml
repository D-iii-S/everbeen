<?xml version="1.0" encoding="UTF-8"?>
<config
	xmlns="http://been.mff.cuni.cz/benchmarkmanagerng/config"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
>
	<type id="Server">
		<value name="jboss" desc="JBoss"/>
		<value name="jonas" desc="Jonas"/>
	</type>
	
	<type id="Platform">
		<value name="windows" desc="Game Console Firmware"/>
		<value name="linux" desc="A basic OS to play with"/>
		<value name="solaris" desc="A real OS"/>
	</type>
	
	<type id="DebugLevel">
		<value name="0" desc="No debug messages"/>
		<value name="1" desc="Error messages"/>
		<value name="2" desc="Error messages and HTML"/>
		<value name="3" desc="Everything"/>
	</type>
	
	<type id="DumpType">
		<value name="text" desc="text"/>
		<value name="binary" desc="binary"/>
	</type>
	
	<type id="Transition">
		<value name="bidding" desc="bidding"/>
		<value name="browsing" desc="browsing"/>
	</type>
	
	<type id="Benchmark" multi="true">
		<value name="ejbcmp2" desc="EJB CMP2"/>
		<value name="ejbcmp" desc="Entity Beans CMP"/>
		<value name="ejbbmp" desc="Entity Beans BMP"/>
		<value name="sfwli" desc="Session Facade with Local Interfaces"/>
		<value name="mdb" desc="MDB"/>
		<value name="sf" desc="Session Facade"/>
		<value name="sb" desc="Session Beans"/>
	</type>

	<type id="Computer" multi="true">
		<value name="hostOne" desc="This will be set by the Generator!"/>
		<value name="hostTwo" desc="This will be set by the Generator!"/>
		<value name="hostThree" desc="This will be set by the Generator!"/>
	</type>
	
	<group id="ejbsoftware" desc="EJB packages">
		<item id="ejbserver" desc="EJB server package" type="Server" constraint="this != empty"/>
		<item id="ejbplatform" desc="Operating System" type="Platform" constraint="this != empty"/>
		<item id="ejbversion" desc="EJB Server Version" type="text" constraint="this != empty"/>
	</group>
	
	<group id="sqlsoftware" desc="SQL package">
		<item id="sqlversion" desc="MySQL Version" type="text" constraint="this != empty"/>
		<item id="sqlplatform" desc="Operating System" type="Platform" constraint="this != empty"/>
	</group>
	
	<group id="naming" desc="Name of the experiment">
		<item id="name" type="text" default="Lojza" desc="A short experiment name for listing" constraint="this != ''"/>
		<item id="description" type="text" default="Another outstanding experiment" desc="A long and human-readable description of the experiment"/>
	</group>
	
	<group id="ejbtype" desc="EJB implementation selection">
		<item id="type" desc="Select EJB implementation" type="Benchmark" constraint="this != empty"/>
	</group>
	
	<group id="hostselect0" desc="Host Selection">
		<item id="clientrsl" type="text" desc="RSL condition for client hosts"/>
		<item id="serverrsl" type="text" desc="RSL condition for server hosts"/>
		<item id="dbrsl" type="text" desc="RSL condition for database hosts"/>
		<item id="buildrsl" type="text" desc="RSL condition for compilation hosts"/>
	</group>
	
	<group id="properties" desc="Benchmark Properties">
		<item id="rc" desc="Run count" type="text" default="2" constraint="this != empty &amp;&amp; this > 0"/>
		<item id="cec" desc="Client emulator count" type="text" default="1" constraint="this != empty &amp;&amp; this > 0"/>
		<item id="ecph" desc="Emulated clients per host" type="text" default="20" constraint="this != empty &amp;&amp; this > 0"/>
		<item id="urt" desc="Up Ramp time (in minutes)" type="text" default="1" constraint="this != empty &amp;&amp; this > 0"/>
		<item id="ursf" desc="Up Ramp slowdown factor" type="text" default="2" constraint="this != empty &amp;&amp; this > 0"/>
		<item id="st" desc="Session time (in minutes)" type="text" default="10" constraint="this != empty &amp;&amp; this > 0"/>
		<item id="drt" desc="Down Ramp time (in minutes)" type="text" default="1" constraint="this != empty &amp;&amp; this > 0"/>
		<item id="drsf" desc="Down Ramp slowdown factor" type="text" default="3" constraint="this != empty &amp;&amp; this > 0"/>
		<item id="mtpcs" desc="Maximum transitions per client session" type="text" default="10" constraint="this != empty &amp;&amp; this > 0"/>
		<item id="dl" desc="Debug Level" type="DebugLevel" default="0"/>
		<item id="ddt" desc="Database Dump Type" type="DumpType" default="text"/>
		<item id="tt" desc="Transition Table" type="Transition" constraint="this != empty"/>
	</group>
	
	<group id="hostselect1" desc="Host Selection">
		<item id="clients" type="Computer" typeargs="hostselect.clientrsl" default="all" constraint="this.nselected > 0" desc="The list of clients"/>
		<item id="ejbservers" type="Computer" typeargs="hostselect.serverrsl" default="all" constraint="this.nselected > 0" desc="The list of EJB servers"/>
		<item id="dbservers" type="Computer" typeargs="hostselect.dbrsl" default="all" constraint="this.nselected > 0" desc="The list of database servers"/>
	</group>
	
	<group id="rfunctions" desc="R callback scripts">
		<item id="completerun" type="textarea" default="" desc="Complete run script" constraint="RValid( this )"/>
		<item id="completebin" type="textarea" default="rubis.generateRunsStatistics()\nrubis.generateBinaryStatistics()\nrubis.registerInvalidateScripts()\n" desc="Complete run script" constraint="RValid( this )"/>
		<item id="completeexp" type="textarea" default="rubis.generateExperimentStatistics()\nrubis.generateExperimentGraph()\n" desc="Complete run script"  constraint="RValid( this )"/>
		<item id="incompbin" type="textarea" default="" desc="Complete run script" constraint="RValid( this )"/>
		<item id="incompexp" type="textarea" default="" desc="Complete run script" constraint="RValid( this )"/>
	</group>
</config>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>task-example-task</artifactId>
	<packaging>jar</packaging>
	<name>task-example-task</name>

	<parent>
		<groupId>cz.cuni.mff.d3s.been.examples</groupId>
		<artifactId>examples</artifactId>
		<version>2.1.0</version>
	</parent>

	<dependencies>
		<dependency>
			<groupId>hello</groupId>
			<artifactId>hello.jar</artifactId>
			<version>none</version>
			<scope>system</scope>
			<systemPath>${project.basedir}/src/main/resources/files/hello.jar</systemPath>
		</dependency>
	</dependencies>

	<build>
		<plugins>

			<plugin>
				<groupId>org.dstovall</groupId>
				<artifactId>onejar-maven-plugin</artifactId>
				<version>1.4.4</version>
				<executions>
					<execution>
						<configuration>
							<onejarVersion>0.97</onejarVersion>
							<attachToBuild>true</attachToBuild>
							<classifier>onejar</classifier>
						</configuration>
						<goals>
							<goal>one-jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<!-- AND NOW WE WANT TO CREATE BPK PACKAGE -->
			<plugin>
				<groupId>cz.cuni.mff.d3s.been</groupId>
				<artifactId>bpk-plugin</artifactId>
				<version>${been.version}</version>
				<executions>
					<execution>
						<goals>
							<goal>buildpackage</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<humanName>Demo Shell Task (linux)</humanName>
					<packageJarFile>${project.build.directory}/${project.build.finalName}.one-jar.jar</packageJarFile>
					<mainClassName>cz.cuni.mff.been.task.example.task1.Example1Task</mainClassName>
					<name>example-task</name>

					<filesToArchive>
						<filesToArchive>
							<file>${project.basedir}/src/main/resources/files/hello.jar</file>
						</filesToArchive>
					</filesToArchive>

				</configuration>
			</plugin>

			<!-- NOW COPY THE BPK TO SOFTWARE REPOSITORY BOOTSTRAP FOLDER -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<version>${maven-resources-plugin.version}</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.parent.basedir}/../data/softwarerepository</outputDirectory>
							<resources>
								<resource>
									<directory>${project.basedir}/target/</directory>
									<includes>
										<include>*.bpk</include>
									</includes>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>


		</plugins>
	</build>


	<pluginRepositories>
		<pluginRepository>
			<id>onejar-maven-plugin.googlecode.com</id>
			<url>http://onejar-maven-plugin.googlecode.com/svn/mavenrepo</url>
		</pluginRepository>
	</pluginRepositories>


</project>

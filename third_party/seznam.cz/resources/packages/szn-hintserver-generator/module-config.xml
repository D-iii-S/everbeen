<?xml version="1.0" encoding="UTF-8"?>
<config
	xmlns="http://been.mff.cuni.cz/benchmarkmanagerng/config"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
>

	<group id="build" desc="Download and Build Configuration">
		<item id="repository.url" type="text" desc="Repository URL" default="svn://" constraint="NotEmpty" />
		<item id="build.rsl" type="rsl" desc="Build on host(s)" default="name=~/.*/" />
	</group>

	<group id="execute" desc="Execution Configuration">
		<item id="server.rsl" type="rsl" desc="Server host(s)" default="name=~/.*/" />
		<item id="client.count" type="text" desc="Number of clients" default="5" constraint="Integer" />
		<item id="client.rsl" type="rsl" desc="Client host(s)" default="name=~/.*/" />
	</group>

	<group id="timing" desc="Requests configuration">
		<item id="rps.max" type="text" desc="Max requests per second" default="40000" constraint="Integer" />
		<item id="rps.step" type="text" desc="RPS step" default="5000" constraint="Integer" />
		<item id="burst.delay" type="text" desc="Delay between bursts" default="10" constraint="Integer" />
		<item id="burst.time" type="text" desc="Length of one burst" default="90" constraint="Integer" />
	</group>

	<group id="planner" desc="Planner Setup">
		<item id="max.builds" type="text" desc="Max builds per version" default="10" constraint="Integer"/>
		<item id="run.ratio" type="text" desc="Runs per build" default="5" constraint="Integer" />
		<item id="planner.points" type="text" desc="Planner points" default="10" constraint="Integer" />
		<item id="build.price" type="text" desc="Build price" default="5" constraint="Integer" />
		<item id="run.price" type="text" desc="Run price" default="1" constraint="Integer" />
	</group>
</config>

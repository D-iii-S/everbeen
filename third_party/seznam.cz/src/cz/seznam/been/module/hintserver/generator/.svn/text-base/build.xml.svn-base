<project name="BEEN-Seznam.cz-packages" default="package" basedir=".">
	<!-- ============== PROPERTIES ============== -->

	<property name="module.name" value="szn-hintserver-generator" />

	<!-- version of the module -->
	<property name="module.version" value="1.0" />

	<!-- Directory path of the pluggable module package -->
	<property name="module.package.dir" value="cz/seznam/been/module/hintserver/generator" />

	<!-- Directory path of the pluggable module resources -->
	<property name="module.resources.dir" location="${packages.dir}/${module.name}" />
	
<!-- ==================== DON'T CHANGE BELLOW ========================= -->

	<!-- Name of the jar file with module's classes  -->
	<property name="module.jar" value="${module.name}.jar" />

	<!-- Package's filename -->
	<property name="module.bpk" value="${module.name}-${module.version}.bpk"/>


	<!-- ============== FILESETS, CLASSPATH, etc ================ -->

	<!-- Modules's class files -->
	<fileset id="module.classes" dir="${build.dir}">
		<!-- Module classes -->
		<include name="${module.package.dir}/**/*.class" />
	</fileset>

	<!-- Modules's resource files -->
	<fileset id="module.resources" dir="${module.resources.dir}">
		<include name="config.xml" />
		<include name="metadata.xml" />
		<include name="module-config.xml" />
	</fileset>

	<!-- ============== TARGETS ================ -->

	<!-- Checks if we need to regenerate the package. -->
	<target name="package-uptodate">
		<uptodate property="dont.build.package" targetfile="${dist.dir}/${module.bpk}">
			<srcfiles refid="module.classes" />
			<srcfiles refid="module.resources" />
		</uptodate>
	</target>

	<!-- Create a BEEN package for this pluggable module -->
	<target name="package" depends="package-uptodate" unless="dont.build.package">
		<!-- create the jar file with module's classes -->
		<jar destfile="${build.dir}/${module.jar}">
			<fileset refid="module.classes" />
		</jar>

		<!-- create the zip file with the modules package's contents in the dist directory -->
		<zip destfile="${dist.dir}/${module.bpk}" update="false">
			<fileset refid="module.resources" />
			<zipfileset prefix="files" dir="${build.dir}">
				<include name="${module.jar}" />
			</zipfileset>
		</zip>

		<!-- delete the jar file with the module's classes (it's already zipped in the module's package -->
		<delete file="${build.dir}/${module.jar}"/>
	</target>

</project>

<project name="BEEN-Seznam.cz-packages" default="package" basedir=".">

	<!-- ============== PROPERTIES ============== -->

	<property name="task.name" value="szn-hintserver-logupload" />

	<!-- version of the task. -->	
	<property name="task.version" value="1.0" />

	<!-- Directory path of the package of the task -->
	<property name="task.package.dir" value="cz/seznam/been/task/hintserver/logupload" />

	<!-- Directory of the task in the resources directory -->
	<property name="task.resources.dir" location="${packages.dir}/${task.name}" />

	<!-- Name of the jar file with task's classes  -->
	<property name="task.jar" value="${task.name}.jar" />

	<!-- Package's filename -->
	<property name="task.bpk" value="${task.name}-${task.version}.bpk" />


	<!-- ============== FILESETS, CLASSPATH, etc ================ -->

	<!-- Task's class files -->
	<fileset id="task.classes" dir="${build.dir}">
		<include name="${task.package.dir}/**/*.class" />
		<!-- The base class -->
		<include name="cz/seznam/been/task/common/FileUpload.class" />
	</fileset>

	<!-- Task's resource files -->
	<fileset id="task.resources" dir="${task.resources.dir}">
		<include name="config.xml" />
		<include name="metadata.xml" />
	</fileset>


	<!-- ============== TARGETS ================ -->

	<!-- Checks if we need to regenerate the BEEN package. -->
	<target name="package-uptodate">
		<uptodate property="dont.build.package" targetfile="${dist.dir}/${task.bpk}">
			<srcfiles refid="task.classes"></srcfiles>
			<srcfiles refid="task.resources"></srcfiles>
		</uptodate>
	</target>

	<!-- Create a BEEN package for this task -->
	<target name="package" depends="package-uptodate" unless="dont.build.package">
		<!-- create the jar file with task's classes -->
		<jar destfile="${build.dir}/${task.jar}">
			<fileset refid="task.classes" />
		</jar>

		<!-- create the zip file with the task package's contents in the dist directory -->
		<zip destfile="${dist.dir}/${task.bpk}" update="false">
			<fileset refid="task.resources" />
			<zipfileset prefix="files" dir="${build.dir}">	
				<include name="${task.jar}"/>
			</zipfileset>
		</zip>

		<!-- delete the jar file with the task's classes (it's already zipped in the task's package -->
		<delete file="${build.dir}/${task.jar}"/>
	</target>

</project>

<project name="BEEN" default="dist" basedir=".">
	
	<!-- ================ PROPERTIES ================ -->
	
	<!-- ==== Directories ==== -->
	
	<!-- The root directory of the Host Runtime. -->
	<property name="hostruntime.dir"
		location="${data.dir}/hostruntime" />
	
	<!-- Package cache directory. -->
	<property name="hostruntime.cache.dir"
		location="${hostruntime.dir}/cache" />

	<!-- Boot packages directory. -->
	<property name="hostruntime.boot.dir"
		location="${hostruntime.dir}/boot" />

	<!-- Native library directory. -->
	<property name="hostruntime.native-lib.dir"
		location="${hostruntime.dir}/native-lib" />

	<!-- Load data directory. -->
	<property name="hostruntime.load.dir"
		location="${hostruntime.dir}/load" />

	<!-- Task data base directory. -->
	<property name="hostruntime.tasks.dir"
		location="${hostruntime.dir}/tasks" />
	
	<!-- ==== Sources of DTD files ==== -->
		
	<!-- DTD of package's configuration XML file. -->
	<property name="package.configuration.dtd.file"
		location="${dtd.dir}/hostruntime/package-configuration.dtd" />
	
	<!-- ================ TARGETS ================ -->
	
	<!-- Create structure of files and directories for Host Runtime. -->
	<target name="dist">
		<!-- Create directories. -->
		<mkdir dir="${hostruntime.dir}" />
		<mkdir dir="${hostruntime.cache.dir}" />
		<mkdir dir="${hostruntime.boot.dir}" />
		<mkdir dir="${hostruntime.native-lib.dir}" />
		<mkdir dir="${hostruntime.load.dir}" />
		<mkdir dir="${hostruntime.tasks.dir}" />
		
		<!-- Copy DTD files. -->
		<copy file="${package.configuration.dtd.file}"
			todir="${hostruntime.dir}" />

		<!-- Copy BEEN core packages to the boot packages directory. -->
		<!--<copy file="${dist.tasks.dir}/benchmarkmanager-1.0.bpk" todir="${hostruntime.boot.dir}" />-->
		<copy file="${dist.tasks.dir}/benchmarkmanagerng-1.0.bpk" todir="${hostruntime.boot.dir}" />
		<copy file="${dist.tasks.dir}/hostmanager-1.0.bpk" todir="${hostruntime.boot.dir}" />
		<!--<copy file="${dist.tasks.dir}/resultsrepositoryng-1.0.bpk" todir="${hostruntime.boot.dir}" />-->
		<copy file="${dist.tasks.dir}/softwarerepository-1.0.bpk" todir="${hostruntime.boot.dir}" />
		<!--<copy file="${dist.tasks.dir}/testmanager-1.0.bpk" todir="${hostruntime.boot.dir}" />-->
		<copy file="${dist.tasks.dir}/clinterface-1.0.bpk" todir="${hostruntime.boot.dir}" />

		<copy file="${dist.tasks.dir}/detectortask-1.0.bpk" todir="${hostruntime.boot.dir}" />

		<!-- Copy Load Monitor native libraries to native library directory. -->
		<copy file="${been.dir}/native/monitor/bin/LoadMonitor.wnm" todir="${hostruntime.native-lib.dir}" />
		<copy file="${been.dir}/native/monitor/bin/LoadMonitor.lnm" todir="${hostruntime.native-lib.dir}" />
		<!-- TODO Solaris -->
	</target>
</project>

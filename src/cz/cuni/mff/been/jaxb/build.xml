<project name="BEEN-jaxb" default="generate" basedir=".">
	
	<taskdef name="xjc" classname="com.sun.tools.xjc.XJCTask">
		<classpath>
			<fileset dir="${lib.dir}/jaxb" includes="*.jar" />
		</classpath>
	</taskdef>

	<!-- the task's source directory -->
	<property name="jaxb.src.dir" location="${src.dir}/cz/cuni/mff/been/jaxb" />

	<fileset id="benchmark" dir="${jaxb.src.dir}/benchmark" includes="**/*" />
	<fileset id="config" dir="${jaxb.src.dir}/config" includes="**/*" />
	<fileset id="dataset" dir="${jaxb.src.dir}/dataset" includes="**/*" />
	<fileset id="group" dir="${jaxb.src.dir}/group" includes="**/*" />
	<fileset id="pmc" dir="${jaxb.src.dir}/pmc" includes="**/*" />
	<fileset id="properties" dir="${jaxb.src.dir}/properties" includes="**/*" />
	<fileset id="td" dir="${jaxb.src.dir}/td" includes="**/*" />
	<fileset id="tuplit" dir="${jaxb.src.dir}/tuplit" includes="**/*" />
	
	<target name="generate">
		<xjc destdir="${src.dir}" extension="true" removeOldOutput="yes" package="cz.cuni.mff.been.jaxb.benchmark">
			<schema dir="${jaxb.src.dir}" includes="benchmark.xsd" />
			<depends dir="${jaxb.src.dir}" includes="common.xsd attrtypes.xsd benchmark.xsd" />
			<produces refid="benchmark" />
		</xjc>
	
		<xjc destdir="${src.dir}" extension="true" removeOldOutput="yes" package="cz.cuni.mff.been.jaxb.config">
			<schema dir="${jaxb.src.dir}" includes="config.xsd" />
			<depends dir="${jaxb.src.dir}" includes="common.xsd attrtypes.xsd config.xsd" />
			<produces refid="config" />
		</xjc>

		<xjc destdir="${src.dir}" extension="true" removeOldOutput="yes" package="cz.cuni.mff.been.jaxb.dataset">
			<schema dir="${jaxb.src.dir}" includes="dataset.xsd" />
			<depends dir="${jaxb.src.dir}" includes="common.xsd attrtypes.xsd dataset.xsd" />
			<produces refid="dataset" />
		</xjc>

		<xjc destdir="${src.dir}" extension="true" removeOldOutput="yes" package="cz.cuni.mff.been.jaxb.group">
			<schema dir="${jaxb.src.dir}" includes="group.xsd" />
			<depends dir="${jaxb.src.dir}" includes="common.xsd attrtypes.xsd group.xsd" />
			<produces refid="group" />
		</xjc>
		
		<xjc destdir="${src.dir}" extension="true" removeOldOutput="yes" package="cz.cuni.mff.been.jaxb.pmc">
			<schema dir="${jaxb.src.dir}" includes="pmc.xsd" />
			<depends dir="${jaxb.src.dir}" includes="common.xsd pmc.xsd" />
			<produces refid="pmc" />
		</xjc>

		<xjc destdir="${src.dir}" extension="true" removeOldOutput="yes" package="cz.cuni.mff.been.jaxb.properties">
			<schema dir="${jaxb.src.dir}" includes="properties.xsd" />
			<depends dir="${jaxb.src.dir}" includes="common.xsd attrtypes.xsd properties.xsd" />
			<produces refid="properties" />
		</xjc>

		<xjc destdir="${src.dir}" extension="true" removeOldOutput="yes" package="cz.cuni.mff.been.jaxb.td">
			<schema dir="${jaxb.src.dir}" includes="trigger.xsd" />
			<depends dir="${jaxb.src.dir}" includes="common.xsd strbin.xsd condition.xsd td.xsd trigger.xsd" />
			<produces refid="td" />
		</xjc>

		<xjc destdir="${src.dir}" extension="true" removeOldOutput="yes" package="cz.cuni.mff.been.jaxb.tuplit">
			<schema dir="${jaxb.src.dir}" includes="tuplit.xsd" />
			<depends dir="${jaxb.src.dir}" includes="common.xsd attrtypes.xsd tuplit.xsd" />
			<produces refid="tuplit" />
		</xjc>
	</target>
	
	<target name="genclean">
		<delete>
			<fileset refid="benchmark" />
			<fileset refid="config" />
			<fileset refid="dataset" />
			<fileset refid="group" />
			<fileset refid="pmc" />
			<fileset refid="properties" />
			<fileset refid="td" />
			<fileset refid="tuplit" />
		</delete>
	</target>
</project>

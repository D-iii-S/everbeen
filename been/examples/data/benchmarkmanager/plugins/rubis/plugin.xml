<!DOCTYPE plugin PUBLIC "-//JPF//Java Plug-in Manifest 0.5" "http://jpf.sourceforge.net/plugin_0_5.dtd">

<plugin id="cz.cuni.mff.been.plugins.rubis" version="0.1" >

		<doc>
			<doc-text>
				<![CDATA[
					<a href="http://rubis.objectweb.org/index.html">RUBiS</a> EJB benchmark.
					It measures the performance of the 
					<a href="http://www.jboss.org/products/jbossas">JBoss</a> and
					<a href="http://jonas.objectweb.org/">Jonas</a> application servers. It implements
					a auction site similar to
					<a href="http://www.ebay.com/">eBay.com</a>. The client emulators can simulate 
					activity of multiple clients from one host. Several client emulators can be run
					at the same time.
				]]>
			</doc-text>
		</doc>
	
		<attributes>
			<attribute id="pluginName" value="RUBiS" />
		</attributes>
	
		<requires>
			<import plugin-id="cz.cuni.mff.been.apps.benchmarkmanager.core"/>
		</requires>
	
 		<runtime>
			<library type="code" path="code/" id="core" />
		</runtime>

	
		<extension plugin-id="cz.cuni.mff.been.apps.benchmarkmanager.core" point-id="benchmark" id="rubis">
			<parameter id="generator" value="cz.cuni.mff.been.apps.benchmarkmanager.plugins.rubis.RubisTaskGenerator"/>
			<parameter id="configurator" value="cz.cuni.mff.been.apps.benchmarkmanager.plugins.rubis.RubisConfigurator"/>
			<parameter id="versionprovider" value="cz.cuni.mff.been.apps.benchmarkmanager.plugins.rubis.RubisVersionProvider"/>
		</extension>
		
</plugin>

<?xml version="1.0" encoding="UTF-8"?>
<config
	xmlns="http://been.mff.cuni.cz/benchmarkmanagerng/config"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
>
	<type id="tsuite">
		<value name="ping" desc="Ping"/>
		<value name="ccc" desc="Concurrency Client Connections"/>
		<value name="dsi" desc="Dispatch Servant Instances"/>
		<value name="dsl" desc="Dispatch Servant Lifecycle"/>
		<value name="id" desc="Invocation Dynamic"/>
		<value name="ii" desc="Invocation Initial"/>
		<value name="is" desc="Invocation Static"/>
		<value name="void" desc="Void"/>
		<value name="mta" desc="Marshal Types Array"/>
		<value name="mts" desc="Marshal Types Single"/>
		<value name="mos" desc="Marshal Octet Sequence"/>
		<value name="mds" desc="Marshal Delayed Sequence"/>
		<value name="mda" desc="Marshal Delayed Any"/>
	</type>

	<type id="tcomputer" multi="true">
		<value name="host1" desc="The first host. Generator must set this list."/>
		<value name="host2" desc="The second host. Generator must set this list."/>
	</type>
	
	<group id="naming" desc="Name of the experiment">
		<item id="name" type="text" default="Lojza" desc="A short experiment name for listing" constraint="this != ''"/>
		<item id="description" type="text" default="Another outstanding experiment" desc="A long and human-readable description of the experiment"/>
	</group>
	
	<group id="repo" desc="Repository location and data">
		<item id="hostname" type="text" desc="Host location (IP or DNS)" constraint="this != ''"/>
		<item id="path" type="text" desc="Path to the repository" default="/"/>
		<item id="branch" type="text" desc="Branch to check out" constraint="this != ''"/>
	
		<item id="anonymous" type="checkbox" desc="Try anonymous access" default="true"/>
		<item id="username" type="text" desc="User name" constraint="this != ''" enabled="true"/>
		<item id="password" type="text" desc="Password" enabled="true"/>
	</group>
	
	<group id="versions" desc="Software versions">
		<item id="xamplertext" desc="Xampler version" type="text" constraint="this != empty" default="1.11"/>
		<item id="omniORBtext" desc="OmniORB version" type="text" constraint="this != empty" default="4.0.5"/>
		<item id="omniORBBranch" desc="OmniORB branch" type="text" constraint="this != empty" default="4.0"/>
	</group>
	
	<group id="iterations" desc="Number of runs and binaries">
		<item id="nruns" desc="Number of runs" type="text" constraint="this != empty &amp;&amp; this > 0" default="1"/>
		<item id="nbins" desc="Number of binaries" type="text" constraint="this != empty &amp;&amp; this > 0" default="1"/>
	</group>
	
	
	<group id="gsuite" desc="Xampler suite">
		<item id="isuite" desc="Select benchmarking suite" type="tsuite" default="void"/>
	</group>
	
	<group id="settings" desc="General settings">
		<item id="SAM_TestSamples" desc="A description..." type="text" default="1" constraint="this != empty &amp;&amp; this > 0"/>
		<item id="SAM_MaxItems" desc="A description..." type="text" default="1" constraint="this != empty &amp;&amp; this > 0"/>
		<item id="SAM_MaxOctets" desc="A description..." type="text" default="1" constraint="this != empty &amp;&amp; this > 0"/>
		<item id="SAM_MaxThreads" desc="A description..." type="text" default="1" constraint="this != empty &amp;&amp; this > 0"/>
		<item id="SAM_MaxInstances" desc="A description..." type="text" default="1" constraint="this != empty &amp;&amp; this > 0"/>
		<item id="MEA_WarmUpTimeMin" desc="A description..." type="text" default="1" constraint="this != empty &amp;&amp; this > 0"/>
		<item id="MEA_WarmUpTimeMax" desc="A description..." type="text" default="1" constraint="this != empty &amp;&amp; this > 0"/>
		<item id="MEA_RawCycles" desc="A description..." type="text" default="1" constraint="this != empty &amp;&amp; this > 0"/>
		<item id="MEA_SoloCycles" desc="A description..." type="text" default="1" constraint="this != empty &amp;&amp; this > 0"/>
		<item id="MEA_UsageCycles" desc="A description..." type="text" default="1" constraint="this != empty &amp;&amp; this > 0"/>
		<item id="MEA_SharedTime" desc="A description..." type="text" default="1" constraint="this != empty &amp;&amp; this > 0"/>
	</group>
	
	<group id="hostspec" desc="Host Specification">
		<item id="clientrsl" type="text" desc="RSL condition for client hosts"/>
		<item id="serverrsl" type="text" desc="RSL condition for server hosts"/>
		<item id="buildrsl" type="text" desc="RSL condition for compilation hosts"/>
	</group>
	
	<group id="hostselect" desc="Host Selection">
		<item id="clients" type="tcomputer" typeargs="hostspec.clientrsl" default="all" constraint="this.nselected > 0" desc="The list of clients"/>
		<item id="servers" type="tcomputer" typeargs="hostspec.clientrsl" default="all" constraint="this.nselected > 0" desc="The list of servers"/>
	</group>
	
	<group id="rfunctions" desc="R callback scripts">
		<item id="completerun" type="textarea" default="" desc="Complete run script" constraint="RValid( this )"/>
		<item id="completebin" type="textarea" default="xampler.generateRunsStatistics()\nxampler.generateBinaryStatistics()\nxampler.registerInvalidateScripts()\n" desc="Complete run script" constraint="RValid( this )"/>
		<item id="completeexp" type="textarea" default="xampler.generateExperimentStatistics()\nxampler.generateExperimentGraph()\n" desc="Complete run script"  constraint="RValid( this )"/>
		<item id="incompbin" type="textarea" default="" desc="Complete run script" constraint="RValid( this )"/>
		<item id="incompexp" type="textarea" default="" desc="Complete run script" constraint="RValid( this )"/>
	</group>
</config>

<!--

  This file serves as a template for all the evaluator pluggable modules.
  I suggest you change just the 4 properties at the top and leave the rest.
  Don't forget to add your module to both "dist" and "clean" targets
  in the .../module/evaluator/build.xml file.

-->
<project name="BEEN" default="dist" basedir=".">
	<!-- ============== PROPERTIES ============== -->

	<property name="module.name" value="generic-r-evaluator" />

	<!-- version of the task. -->
	<property name="module.version" value="1.0" />

	<!-- Directory path of the pluggable module package -->
	<property name="module.package.path" value="${evaluator.package.path}/genericr" />

	<!-- Directory path of the pluggable module resources -->
	<property name="module.resources.dir" location="${evaluator.resources.dir}/genericr" />


<!-- ==================== DON'T CHANGE BELLOW ========================= -->

	<!-- Name of the jar file with module's classes  -->
	<property name="module.jar" value="${module.name}.jar" />

	<!-- Package's filename -->
	<property name="module.bpk" value="${module.name}-${module.version}.bpk"/>


	<!-- ============== FILESETS, CLASSPATH, etc ================ -->

	<!-- Modules's class files -->
	<fileset id="module.classes" dir="${build.classes.dir}">
		<!-- Module classes -->
		<include name="${module.package.path}/**/*.class" />
	</fileset>

	<!-- Modules's resource files -->
	<fileset id="module.resources" dir="${module.resources.dir}">
		<include name="config.xml" />
		<include name="metadata.xml" />
		<include name="module-config.xml" />
	</fileset>


	<!-- ============== TARGETS ================ -->

	<!-- Checks if we need to regenerate the package. -->
	<target name="package-uptodate">
		<uptodate property="dont.build.package" targetfile="${dist.tasks.dir}/${module.bpk}">
			<srcfiles refid="module.classes" />
			<srcfiles refid="module.resources" />
		</uptodate>
	</target>


	<!-- Create a BEEN package for this pluggable module -->
	<target name="dist" depends="package-uptodate" unless="dont.build.package">
		<!-- create the jar file with module's classes -->
		<jar destfile="${module.resources.dir}/${module.jar}">
			<fileset refid="module.classes" />
		</jar>

		<!-- create the zip file with the modules package's contents in the dist directory -->
		<zip destfile="${dist.tasks.dir}/${module.bpk}" update="false">
			<fileset refid="module.resources" />
			<zipfileset prefix="files" dir="${module.resources.dir}">
				<include name="${module.jar}"/>
			</zipfileset>
		</zip>

		<!-- delete the jar file with the task's classes (it's already zipped in the task's package -->
		<delete file="${module.resources.dir}/${module.jar}"/>
	</target>

	<target name="install" depends="dist" />

	<target name="clean">
		<delete file="${module.resources.dir}/${module.jar}"/>
	</target>

</project>

<project name="BEEN" default="dist" basedir=".">

	<!-- ================ PROPERTIES ================ -->

	<!-- Directory path of the pluggable modules' interface -->
	<property name="module.interface.path" value="${modules.package.path}" />

	<!-- Directory of the pluggable modules' resources -->
	<property name="evaluator.resources.dir" location="${modules.resources.dir}/evaluator" />
	
	<!-- Source directories -->
	<property name="evaluator.src.dir" location="${modules.src.dir}/evaluator" />
	<property name="evaluator.package.path" value="${modules.package.path}/evaluator" />

	<!-- ================ TARGETS ================ -->

	<target name="dist">
		<!-- dist all the evaluators -->
		<ant inheritrefs="true" dir="${evaluator.src.dir}/simpletest" target="dist" />
		<ant inheritrefs="true" dir="${evaluator.src.dir}/genericr" target="dist" />
		<ant inheritrefs="true" dir="${evaluator.src.dir}/xampler" target="dist" />
	</target>

	<target name="clean">
		<!-- clean all the evaluators -->
		<ant inheritrefs="true" dir="${evaluator.src.dir}/simpletest" target="clean" />
		<ant inheritrefs="true" dir="${evaluator.src.dir}/genericr" target="clean" />
		<ant inheritrefs="true" dir="${evaluator.src.dir}/xampler" target="clean" />
	</target>

	<!-- The other targets -->
	<target name="install" depends="dist" />

</project>

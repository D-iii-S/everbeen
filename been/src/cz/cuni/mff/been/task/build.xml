<project name="BEEN-tasks" default="package" basedir=".">
<!--
	<!-#- ============== PROPERTIES ============== -#->
	<property name="task.package.path" value="cz/cuni/mff/been/task"/>
	<!-#- ============== FILESETS, CLASSPATH, etc ================ -#->
	<zipfileset id="task.base.classes" dir="${build.classes.dir}">
		<include name="${task.package.path}/*.class"/>
	</zipfileset>
-->
	<!-- ============== TARGETS ================ -->
	
	<target name="package" >
		<!-- system tasks -->
		<ant inheritrefs="true" dir="${basedir}/detector" target="package" />
        <ant inheritrefs="true" dir="${basedir}/jythonscript/" target="package" />
		<ant inheritrefs="true" dir="${basedir}/shellscript/" target="package" />
        <ant inheritrefs="true" dir="${basedir}/contextmonitor/" target="package" />
        <ant inheritrefs="true" dir="${basedir}/benchmarkmanagerng/" target="package" />

		<!-- example tasks -->
		<ant inheritrefs="true" dir="${basedir}/example/task1" target="package" />
		<ant inheritrefs="true" dir="${basedir}/example/service1" target="package" />
		<ant inheritrefs="true" dir="${basedir}/example/pluggablemoduledemo" target="package" />
		<ant inheritrefs="true" dir="${basedir}/example/hibernatedemo" target="package" />
		<ant inheritrefs="true" dir="${basedir}/example/jythontaskdemo" target="package" />
		<ant inheritrefs="true" dir="${basedir}/example/shelltaskdemo/linux" target="package" />
		<ant inheritrefs="true" dir="${basedir}/example/shelltaskdemo/windows" target="package" />
		
		<!-- test tasks -->
		<ant inheritrefs="true" dir="${basedir}/test/testworker" target="package" />
		<ant inheritrefs="true" dir="${basedir}/test/logtester" target="package" />

		<!-- New xampler tasks -->
		<ant inheritrefs="true" dir="${basedir}/download/cvs" target="package" />
		<ant inheritrefs="true" dir="${basedir}/download/svn" target="package" />
		<ant inheritrefs="true" dir="${basedir}/omniorb/build/linux" target="package" />
		<ant inheritrefs="true" dir="${basedir}/xampler/build/linux" target="package" />
		<ant inheritrefs="true" dir="${basedir}/xampler/deploy" target="package" />
		<ant inheritrefs="true" dir="${basedir}/xampler/execute" target="package" />
		<ant inheritrefs="true" dir="${basedir}/xampler/collectresults" target="package" />
		
	</target>
</project>

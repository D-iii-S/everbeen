<project name="BEEN" default="dist" basedir=".">
	
	<!-- ================ PROPERTIES ================ -->
	
	<!-- Name of the task -->
	<property name="task.name" value="softwarerepository"/>
	
	<!-- version of the task. -->	
	<property name="task.version" value="1.0"/>
	
	<!-- The data directory of the Software Repository -->
	<property name="task.data.dir" location="${data.dir}/softwarerepository" />

	<!-- The packages directory of the Software Repository -->
	<property name="task.packages.dir" location="${packages.dir}/softwarerepository" />
	
	<!-- Directory path of the Software Repository's package -->
	<property name="task.package.path" value="cz/cuni/mff/been/softwarerepository" />

	<!-- Name of the JAR file with Software Repository's classes -->
	<property name="task.jar" value="${task.name}.jar" />

	<!-- Package's filename -->
	<property name="task.bpk" value="${task.name}-${task.version}.bpk"/>

	<!-- ============== FILESETS, CLASSPATH, etc. ================ -->
	
	<!-- Software Repository's class files -->
	<fileset id="task.classes" dir="${build.classes.dir}">
		<include name="${task.package.path}/*.class" />
	</fileset>
	
	<!-- ================ TARGETS ================ -->
	
	<!-- Checks if we need to regenerate the BEEN package. -->
	<target name="package-uptodate">
		<uptodate property="dont.build.package" targetfile="${dist.tasks.dir}/${task.bpk}">
			<srcfiles refid="task.classes"></srcfiles>
			<srcfiles dir="${task.packages.dir}">
				<include name="config.xml" />
				<include name="metadata.xml" />
			</srcfiles>
			<!-- We need to check the build.properties file, because value of
			     the "use.examples" property in the file affects files included
			     in the package. -->
			<srcfiles file="${been.dir}/build.properties" />
		</uptodate>
	</target>

	<!-- Create a BEEN package for the Software Repository -->
	<target name="package" depends="package-uptodate" unless="dont.build.package">
		<!-- Create the JAR file with Software Repository's classes -->
		<jar destfile="${task.packages.dir}/${task.jar}">
			<fileset refid="task.classes" />
		</jar>
		
		<!-- Create the BEEN package in the distribution directory -->
		<zip destfile="${dist.tasks.dir}/${task.bpk}" update="false">
			<zipfileset dir="${task.packages.dir}">
				<include name="config.xml" />
				<include name="metadata.xml" />
			</zipfileset>
			<zipfileset prefix="files" dir="${task.packages.dir}">	
				<include name="${task.jar}" />
			</zipfileset>
		</zip>
		
		<!-- Delete the JAR file with Software Repository's classes -->
		<delete file="${task.packages.dir}/${task.jar}" />
	</target>
	
	<!-- Copy task package files to Software Repository's data directory. -->
	<target name="copy-task-packages" if="copy.task.packages">
		<copy todir="${task.data.dir}">
			<fileset dir="${dist.tasks.dir}"></fileset>
		</copy>
	</target>

	<!-- Create directories for the Software Repository and copy example files -->
	<target name="dist">
		<mkdir dir="${task.data.dir}" />

		<antcall target="copy-task-packages" />
	</target>
	
</project>

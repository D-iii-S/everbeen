<?xml version="1.0" encoding="UTF-8"?>
<config
	xmlns="http://been.mff.cuni.cz/benchmarkmanagerng/config"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
>
	<type id="tsuite" multi="true">
		<value name="ping" desc="Ping"/>
		<!--<value name="ccc" desc="Concurrency Client Connections"/>-->
		<value name="dsi" desc="Dispatch Servant Instances"/>
		<value name="dsl" desc="Dispatch Servant Lifecycle"/>
		<value name="id" desc="Invocation Dynamic"/>
		<value name="ii" desc="Invocation Initial"/>
		<value name="is" desc="Invocation Static"/>
		<value name="void" desc="Void"/>
		<value name="mta" desc="Marshal Types Array"/>
		<value name="mts" desc="Marshal Types Single"/>
		<value name="mos" desc="Marshal Octet Sequence"/>
		<value name="mds" desc="Marshal Delayed Sequence"/>
		<value name="mda" desc="Marshal Delayed Any"/>
	</type>

	<type id="tyesno">
		<value name="yes" desc="Yes"/>
		<value name="no" desc="No"/>
	</type>

	<type id="tsimulate">
		<value name="normal" desc="Normal"/>
		<value name="simulate" desc="Only simulate task workflow"/>
	</type>
	
	<group id="taskoptions" desc="Task Options">
		<item id="task.run.mode" type="tsimulate" default="normal" desc="Task run mode"/>
	</group>
	
	<group id="omniorb_repo" desc="omniORB source">
		<item id="omniorb.cvs.repository" type="text" desc="CVS repository URL" default=":pserver:anonymous@omniorb.cvs.sourceforge.net:/cvsroot/omniorb"/>
		<item id="omniorb.cvs.module" type="text" desc="CVS module name" default="omni"/>
		<item id="omniorb.cvs.branch" type="text" desc="CVS branch to use" default="omni4_1_develop"/>
		<item id="omniorb.cvs.password" type="text" desc="Password" enabled="true"/>
	</group>

	<group id="omniorb_versions" desc="OmniORB versions">
		<item id="versions.from.date" desc="Only download versions after date (yyyy-MM-dd)" type="text" default="2009-07-16"/>
		<item id="version.blacklist" desc="Version blacklist (yyyy-MM-dd HH:mm:ss, one per line)" type="textarea" default=""/>
	</group>


	<group id="omniorb_build" desc="OmniORB build">
		<item id="omniorb.apply.patch" desc="Apply patch to omniORB sources before building to make old omniORB versions buildable?" type="checkbox"  default="true"/>
	</group>

	<group id="xampler_repo" desc="Xampler source">
		<item id="xampler.svn.url" type="text" desc="SVN repository URL" default="http://shiva.ms.mff.cuni.cz/svn/xampler/trunk"/>
		<item id="xampler.svn.revision" type="text" desc="Xampler revision number to check out" default="476"/>
	</group>

	<group id="xampler_suite" desc="Xampler suite">
		<item id="suite" desc="Select benchmarking suite" type="tsuite" default="void"/>
		<item id="subsuite.regex" desc="Subsuite selection regex" type="text" default=".*"/>
	</group>

	
	
	<group id="xampler_build" desc="Xampler build">
		<item id="xampler.suite.subdir" desc="Platform subdirectory to build" type="text" default="omniORB_4.1.X_Linux_GCC"/>
	</group>

	<group id="xampler_run" desc="Xampler execution">
		<item id="xampler.client.params" desc="Command line parameters for Xampler client" type="text" default=""/>
		<item id="xampler.server.params" desc="Command line parameters for Xampler server" type="text" default=""/>			
	</group>

	<group id="hostspec" desc="Host Specification">
		<item id="downloadrsl" type="text" desc="RSL condition for download hosts" default="(name =~ /.*/)"/>
		<item id="clientrsl" type="text" desc="RSL condition for client hosts" default="(name =~ /.*/)"/>
		<item id="serverrsl" type="text" desc="RSL condition for server hosts (if empty, xampler will be run on single host)" default="(name =~ /.*/)"/>
		<item id="buildrsl" type="text" desc="RSL condition for compilation hosts" default="(name =~ /.*/)"/>
	</group>

	<group id="iterations" desc="Iterations">
		<item id="run.build.ratio" desc="#Run/#Build ratio" type="text" default="2.0"/>
		<item id="max.runs" desc="Max. number of runs" type="text" default="100"/>
		<item id="max.builds" desc="Max. number of builds" type="text" default="50"/>
	</group>

	<group id="workload" desc="Workload">
		<item id="workload.units" type="text" default="10" desc="Number of workload units to distribute (for every generator run)"/>
		<item id="download.cost" type="text" default="1" desc="Cost of download activity"/>
		<item id="build.cost" type="text" default="4" desc="Cost of build activity"/>
		<item id="run.cost" type="text" default="2" desc="Cost of run activity"/>
	</group>

	<group id="sources.repository" desc="Sources Repository">
		<item id="sources.repository.use" desc="Use another analysis datasets to store Xampler and omniORB sources" type="checkbox" default="no"/>
		<item id="sources.repository.analysis" desc="Analysis to use (safe name)" type="text" default=""/>
	</group>

	<group id="binaries.repository" desc="Binaries Repository">
		<item id="binaries.repository.use" desc="Use another analysis datasets to store Xampler and omniORB binaries" type="checkbox" default="no"/>
		<item id="binaries.repository.analysis" desc="Analysis to use (safe name)" type="text" default=""/>
	</group>
	
</config>

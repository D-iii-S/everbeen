<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>cz.cuni.mff.d3s.been</groupId>
	<artifactId>evaluator-simpletest</artifactId>
	<packaging>jar</packaging>
	<version>2.1.0</version>
	<name>evaluator-simpletest</name>

	<parent>
		<groupId>cz.cuni.mff.d3s.been.evaluators</groupId>
		<artifactId>evaluators</artifactId>
		<version>2.1.0</version>
	</parent>

	<dependencies>
		<!-- BEEN DEPENDENCIES -->
		<dependency>
			<groupId>cz.cuni.mff.d3s.been</groupId>
			<artifactId>benchmarkmanager</artifactId>
			<version>${been.version}</version>
		</dependency>

		<dependency>
			<groupId>cz.cuni.mff.d3s.been</groupId>
			<artifactId>resultsrepository</artifactId>
			<version>${been.version}</version>
		</dependency>
	</dependencies>


	<build>
		<plugins>
			<!-- AND NOW WE WANT TO CREATE BPK PACKAGE -->
			<plugin>
				<groupId>cz.cuni.mff.d3s.been</groupId>
				<artifactId>bpk-plugin</artifactId>
				<version>${been.version}</version>
				<executions>
					<execution>
						<goals>
							<goal>buildpackage</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<humanName>SimpleTest Evaluator Pluggable Module</humanName>
					<packageJarFile>${project.build.directory}/${project.build.finalName}.jar</packageJarFile>
					<mainClassName>cz.cuni.mff.been.benchmarkmanagerng.module.evaluator.simpletest.SimpleTestEvaluator</mainClassName>
					<name>evaluator-simpletest</name>
					<filesToArchive>
					</filesToArchive>

					<type>module</type>
					<module>
						<config>${pom.basedir}/src/main/resources/module-config.xml</config>
						<interfaces>
							<interface>cz.cuni.mff.been.benchmarkmanagerng.module.ModuleInterface</interface>
							<interface>cz.cuni.mff.been.benchmarkmanagerng.module.EvaluatorInterface</interface>
						</interfaces>
					</module>

				</configuration>
			</plugin>

			<!-- NOW COPY THE BPK TO SOFTWARE REPOSITORY BOOTSTRAP FOLDER -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<version>${maven-resources-plugin.version}</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.parent.basedir}/../data/softwarerepository</outputDirectory>
							<resources>
								<resource>
									<directory>${project.basedir}/target/</directory>
									<includes>
										<include>*.bpk</include>
									</includes>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>

		</plugins>
	</build>

</project>

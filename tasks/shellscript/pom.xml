<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>task-shellscript</artifactId>
    <packaging>jar</packaging>
    <name>task-shellscript</name>

    <parent>
        <groupId>cz.cuni.mff.d3s.been.tasks</groupId>
        <artifactId>tasks</artifactId>
        <version>2.1.0</version>
    </parent>


	<build>
		<plugins>
			<!-- AND NOW WE WANT TO CREATE BPK PACKAGE -->
			<plugin>
				<groupId>cz.cuni.mff.d3s.been</groupId>
				<artifactId>bpk-plugin</artifactId>
				<version>${been.version}</version>
				<executions>
					<execution>
						<goals>
							<goal>buildpackage</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<humanName>Executes shell script</humanName>
					<packageJarFile>${project.build.directory}/${project.build.finalName}.jar</packageJarFile>
					<mainClassName>cz.cuni.mff.been.task.ShellScriptJob</mainClassName>
					<name>shell-script</name>
					<filesToArchive>
					</filesToArchive>

				</configuration>
			</plugin>

			<!-- NOW COPY THE BPK TO SOFTWARE REPOSITORY BOOTSTRAP FOLDER -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<version>${maven-resources-plugin.version}</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.parent.basedir}/../data/softwarerepository</outputDirectory>
							<resources>
								<resource>
									<directory>${project.basedir}/target/</directory>
									<includes>
										<include>*.bpk</include>
									</includes>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>

		</plugins>
	</build>

</project>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>tasks</artifactId>
	<groupId>cz.cuni.mff.d3s.been.tasks</groupId>
	<version>2.1.0</version>
	<packaging>pom</packaging>
	<name>tasks</name>

	<modules>
		<module>context_monitor</module>
		<module>generator_runner</module>
		<module>fileexport</module>
		<module>r</module>
		<module>simple_test</module>

		<!-- missing ant.cvs -->
		<!-- <module>download_cvs</module> -->

		<!-- missing tar -->
		<!-- <module>download_svn</module> -->

		<!-- missing tar, untar -->
		<!-- <module>omniorb</module> -->

		<module>logtester</module>
		<module>jythonscript</module>
		<module>shellscript</module>
		<module>testworker</module>
	</modules>


	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

		<!-- DEPENDENCY VERSION CONTROL -->
		<been.version>2.1.0</been.version>
		<javasvn.version>1.0.4</javasvn.version>
		<opencsv.version>2.0</opencsv.version>

		<!-- JAVA COMPILER VERSION CONTROL -->
		<java-source.version>1.7</java-source.version>
		<java-target.version>1.7</java-target.version>

		<!-- PLUGIN VERSION CONTROL -->
		<maven-compiler-plugin.version>2.5.1</maven-compiler-plugin.version>
		<maven-resources-plugin.version>2.6</maven-resources-plugin.version>
	</properties>

	<dependencies>
		<!-- BEEN DEPENDENCIES -->
		<dependency>
			<groupId>cz.cuni.mff.d3s.been</groupId>
			<artifactId>service_interfaces</artifactId>
			<version>${been.version}</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>${maven-compiler-plugin.version}</version>
				<configuration>
					<source>${java-source.version}</source>
					<target>${java-target.version}</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
